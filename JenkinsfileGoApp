pipeline {
    agent any
    stages {
        stage('Build') {
            agent {
                docker {
                    image 'golang:alpine3.16'
                    label 'sandbox'
                }
            }
            steps {
                echo "Build Apps"
                sh '''
                #!/bin/bash
                go version
                go build -o go-app main.go
                '''
            }
        }
        stage('Test'){
            steps {
                echo "Test Golang Apps"
            }
        }
        stage('Deploy') {
            steps {
                echo "Deploy Golang Apps"
            }
        }
    }
}
